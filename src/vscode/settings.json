{
    "[git-commit]": {
        "editor.rulers": [
            50,
            72
        ],
        "editor.wordWrap": "off"
    },
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features"
    },
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features",
        "editor.formatOnSave": true,
        "editor.insertSpaces": true
    },
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features",
        "editor.formatOnSave": true,
        "editor.insertSpaces": true
    },
    "[markdown]": {
        "editor.defaultFormatter": "yzhang.markdown-all-in-one",
        "editor.formatOnSave": true,
        "editor.rulers": [
            80
        ]
    },
    "[python]": {
        "editor.rulers": [
            80,
            100
        ]
    },
    "[restructuredtext]": {
        "editor.rulers": [
            80
        ]
    },
    "[rust]": {
        "editor.formatOnSave": true,
        "editor.insertSpaces": true,
        "editor.rulers": [
            80
        ],
        "editor.tabSize": 4
    },
    "[toml]": {
        "editor.rulers": [
            80
        ]
    },
    "[typescript]": {
        "editor.rulers": [
            80
        ]
    },
    "[yaml]": {
        "editor.rulers": [
            80
        ]
    },
    "breadcrumbs.enabled": false,
    "editor.cursorWidth": 4,
    "editor.folding": false,
    "editor.fontFamily": "Source Code Pro for Powerline",
    "editor.fontLigatures": true,
    "editor.fontSize": 13,
    "editor.formatOnSave": false,
    "editor.lineHeight": 0,
    "editor.minimap.enabled": false,
    "editor.mouseWheelScrollSensitivity": 2,
    "editor.renderIndentGuides": true,
    "editor.renderWhitespace": "boundary",
    "editor.smoothScrolling": true,
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": "string.quoted.docstring.multi.python",
                "settings": {
                    "foreground": "#6A9955"
                }
            }
        ]
    },
    "explorer.openEditors.visible": 0,
    "files.associations": {
        "*.plist": "xml",
        "Dockerfile.*": "dockerfile"
    },
    "files.exclude": {
        "**/*.egg-info": true,
        "**/*.pyc": true,
        "**/__pycache__": true,
        ".*_cache": true,
        ".coverage*": true,
        ".python-version": true,
        "target": true
    },
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "gitlens.codeLens.enabled": false,
    "markdown.extension.toc.level": "2..6",
    "python.languageServer": "Pylance",
    "python.linting.flake8Enabled": true,
    "python.linting.pylintEnabled": false,
    "python.pythonPath": "${env:HOME}/.pyenv/versions/${workspaceFolderBasename}/bin/python",
    "search.quickOpen.includeHistory": false,
    "terminal.integrated.cursorStyle": "underline",
    "terminal.integrated.env.osx": {
        "EDITOR": "code --wait",
        "GIT_EDITOR": "code --wait"
    },
    "terminal.integrated.fontFamily": "Source Code Pro for Powerline",
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.mouseWheelScrollSensitivity": 2,
    "workbench.colorCustomizations": {
        "terminal.ansiBlue": "#569cd6"
    },
    "workbench.editorAssociations": [
        {
            "filenamePattern": "git-rebase-todo",
            "viewType": "default"
        }
    ],
    "workbench.panel.defaultLocation": "right",
    "workbench.sideBar.location": "right",
    "workbench.startupEditor": "readme"
}
