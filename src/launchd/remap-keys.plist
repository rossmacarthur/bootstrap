<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>io.macarthur.ross.remap-keys</string>
    <key>ProgramArguments</key>
    <array>
        <!-- Note: we execute the script using `sh` so that
             tilde (~) is resolved to the user's home directory -->
        <string>sh</string>
        <string>-c</string>
        <string>~/.local/bin/remap-keys</string>
    </array>
    <key>RunAtLoad</key>
    <true/>
    <key>StartInterval</key>
    <integer>300</integer>
</dict>
</plist>
